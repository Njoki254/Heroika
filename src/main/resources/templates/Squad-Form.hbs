{{#partial "content"}}




    <div class="container">
        <h2 class="text-center"><strong>Create a Squad</strong></h2>

        <form action="/squads/new" method="post">
            <div class="form-group">
                <label class="active " for="squadName">Squad Name</label>
                <input id="squadName" name="squadName" type="text" class="form-control">
            </div>

            <div class="form-group">
                <label class="active" for="maxSize">Squad Size</label>
                <input id="maxSize" name="maxSize" type="text" class="form-control">
            </div>

            <div class="form-group">
                <label class="active" for="squadCause">Squad Cause</label>
                <input id="squadCause" name="squadCause" type="text" class="form-control">
            </div>
            <div class="container" #listofheroes>
                <h3><strong>Select Members Of Your Squad. The first hero you select will be your team lead.</strong></h3>
                <p><a href='/profiles' >Click here to review the Heroes' Profile.</a></p>
                <div class= "row">
                    <div class="col-md-4">
                        <input type="checkbox" id="1" name="members" values="Okoye">
                        <label for="member1"> Okoye</label><br>
                        <input type="checkbox" id="2" name="members" value="Lupita">
                        <label for="member2"> Lupita</label><br>
                        <input type="checkbox" id="3" name="members" value="T'Challa">
                        <label for="member3"> T'Chaka</label><br>


                    </div>
                    <div class="col-md-4">
                        <input type="checkbox" id="1" name="members" value="Killmonger">
                        <label for="member4"> Killmonger</label><br>
                        <input type="checkbox" id="2" name="members" value="Minion">
                        <label for="member5"> Minion</label><br>
                        <input type="checkbox" id="3" name="members" value="Nairobi">
                        <label for="member6"> Nairobi</label><br>
                        <input type="checkbox" id="1" name="members" value="Storm">
                        <label for="member7"> Storm</label><br>



                    </div>
                    <div class="col-md-4">
                        <input type="checkbox" id="2" name="members" value="Shuri">
                        <label for="member8"> Shuri</label><br>
                        <input type="checkbox" id="3" name="members" value="The Couple">
                        <label for="member9"> The Couple</label><br>
                        <input type="checkbox" id="3" name="members" value="Mbaku">
                        <label for="member10"> Mbaku</label><br>
                    </div>
                </div>





            </div>

            <button type="submit" class=" btn btn-success" >Create Squad!</button>
        </form>
    </div>
